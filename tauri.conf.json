{
  "$schema": "https://schema.tauri.app/config/1.0",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "./dist",
    "distDir": "./dist"
  },
  "package": {
    "productName": "MathImage",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "identifier": "com.mathimage.app",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns"],
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "MathImage Settings",
        "width": 800,
        "visible": false
      }
    ]
  }
}